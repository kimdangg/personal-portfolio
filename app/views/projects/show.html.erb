<h1><%= @project.name %></h1>

<div class="well">
  <p><b>Description:</b> <%= @project.description %></p>
  <a href="http://<%= @project.link %>"><img alt="preview_image" src="<%= @project.preview_image%>"></a>
</div>

<% if current_user && current_user.admin? %>
  <%= link_to 'Edit', edit_skill_project_path(@skill, @project) %> |
  <%= link_to 'Delete', skill_project_path(@skill, @project), data: { confirm: "Are you sure?", method: "delete"} %>
<% end %>
