<h4>Add yourself as a reference:</h4>
<%= form_for Reference.new, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => "31", id: "name_input" %><br />
  </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, :size => "31", id: "email_input" %><br />
  </div>
  <%= f.submit "submit" %>
<% end %>