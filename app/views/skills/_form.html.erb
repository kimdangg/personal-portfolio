<%= render "layouts/errors", :object => @skill %>
<div class="well well-form">

  <%= form_for @skill do |f| %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, :size => "31" %><br />
    </div>
    <div class="form-group">

      <%= f.label :description %><br />
      <%= f.text_area :description, :cols => "30", :rows => "6" %><br />
    </div>
    <%= f.submit %>
  <% end %>
</div>
